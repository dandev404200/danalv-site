# Backend Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# REQUIRED IN PRODUCTION
# ===========================================

# Database connection URL
# Format: postgres://user:password@host:port/database
DATABASE_URL=

# Environment: "development" or "production"
ENVIRONMENT=production

# ===========================================
# OPTIONAL
# ===========================================

# Cache time-to-live in seconds (default: 300)
CACHE_TTL=300

# Maximum number of cached items (default: 10)
CACHE_MAX_SIZE=10

# ===========================================
# DEVELOPMENT ONLY
# ===========================================

# CORS origins - only needed in development when running
# frontend (Vite) and backend on different ports
# Not needed in production since frontend/backend share same origin
# CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
